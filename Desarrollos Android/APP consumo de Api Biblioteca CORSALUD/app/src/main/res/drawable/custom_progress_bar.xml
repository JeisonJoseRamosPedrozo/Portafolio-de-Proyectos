<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <clip>
            <shape>
                <solid android:color="#28BA47" /> <!-- Color del fondo de la ProgressBar -->
                <corners android:radius="4dp" /> <!-- Bordes redondeados, ajusta según tu preferencia -->
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="@color/black" /> <!-- Color de la línea de progreso -->
            </shape>
        </clip>
    </item>
</layer-list>
